{% include ('base.html.twig') %}
<div class="container text-center quiz-container">
    <div class="box shadow mx-auto">
        <ul class="list-group rounded">
            <li class="list-group-item">
                <h1 class="mb-0">{{ quiz.name }}</h1>
            </li>
            <li class="list-group-item">
                <i class="fa-regular fa-user"></i> {{ matrikelnummer }} | 
                <span class="{% if rightIndex > 0 %}text-success{% else %}text-danger{% endif %}"><i class="fa-regular fa-circle-check "></i> {{ rightIndex }}</span>
            </li>
            {% if rightAnswer %}
                <li class="list-group-item bg-success text-light">
                    <i class="fa-regular fa-circle-check answer__logo"></i>
                    <i class="fa-regular fa-circle-check answer__logo--right"></i>
                    Richtige Antwort!
                </li>
            {% else %}
                <li class="list-group-item bg-danger text-light">
                    <i class="fa-regular fa-circle-xmark answer__logo"></i>
                    <i class="fa-regular fa-circle-xmark answer__logo--right"></i>
                    <p class="mb-1 fw-bold"><small>Leider falsch! Richtig wäre:</small></p>
                    <p class="m-0">{{ rightAnswerText }}</p>
                </li>
            {% endif %}
        </ul>
    </div>
    <div class="mx-auto shadow border rounded mt-5 mb-5 p-2 quiz__finished">
        <h2>Das Quiz ist fertig</h2>
        {% if rightIndex > 0 %}
            <p class="mt-3 mb-0 fs-5">Glückwunsch <strong>{{ app.session.get('matrikelnummer') }}</strong>!</p>
            <p class="mb-3 fs-5">Du hast insgesamt <strong>{{ rightIndex }} von {{ quiz.getQuestions|length }}</strong> Fragen richtig beantwortet.</p>
        {% else %}
            <p class="mt-3 mb-0 fs-5">Schade <strong>{{ app.session.get('matrikelnummer') }}</strong>!</p>
            <p class="mb-3 fs-5">Du hast leider keine Frage richtig beantwortet.</p>
        {% endif %}
        <p>
            <div class="accordion" id="accordionExample">
            <div class="accordion-item border-0">
                <h2 class="accordion-header" id="headingOne">
                    <button class="quiz__button btn btn-primary mt-2 btn-lg finished__accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <i class="fa-regular fa-eye"></i><i class="fa-regular fa-eye-slash"></i> Meine Antworten
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse box box--70 mx-auto" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body pe-0 ps-0">
                        {% for question in quiz.getQuestions %}
                            {% set index = loop.index0 %}
                            <h3>Frage {{ index + 1 }}</h3>
                            <h4 class="mb-3">{{ question.text }}</h4>
                            <ul class="list-group mb-3">
                                <li class="list-group-item question-stats-li fs-5 pt-2 pb-2 {% if question.answerRight == 1 %}bg-success text-light{% endif %} {% if allAnswers[index].answer == 1 %}{% if allAnswers[index].answer == question.answerRight %}bg-success text-light{% else %}bg-danger text-light{% endif %}{% endif %}">
                                    <span class="question__letter question__letter--statistics bg-dark text-light border">A</span>
                                    {% if allAnswers[index].answer == 1 %}<i class="fa-regular fa-user answer__logo--right"></i>{% endif %}
                                    {{ question.answerOne }}
                                </li>
                                <li class="list-group-item question-stats-li fs-5 pt-2 pb-2 {% if question.answerRight == 2 %}bg-success text-light{% endif %} {% if allAnswers[index].answer == 2 %}{% if allAnswers[index].answer == question.answerRight %}bg-success text-light{% else %}bg-danger text-light{% endif %}{% endif %}">
                                    <span class="question__letter question__letter--statistics bg-dark text-light border">B</span>
                                    {% if allAnswers[index].answer == 2 %}<i class="fa-regular fa-user answer__logo--right"></i>{% endif %}
                                    {{ question.answerTwo }}
                                </li>
                                <li class="list-group-item question-stats-li fs-5 pt-2 pb-2 {% if question.answerRight == 3 %}bg-success text-light{% endif %} {% if allAnswers[index].answer == 3 %}{% if allAnswers[index].answer == question.answerRight %}bg-success text-light{% else %}bg-danger text-light{% endif %}{% endif %}">
                                    <span class="question__letter question__letter--statistics bg-dark text-light border">C</span>
                                    {% if allAnswers[index].answer == 3 %}<i class="fa-regular fa-user answer__logo--right"></i>{% endif %}
                                    {{ question.answerThree }}
                                </li>
                                <li class="list-group-item question-stats-li fs-5 pt-2 pb-2 {% if question.answerRight == 4 %}bg-success text-light{% endif %} {% if allAnswers[index].answer == 4 %}{% if allAnswers[index].answer == question.answerRight %}bg-success text-light{% else %}bg-danger text-light{% endif %}{% endif %}">
                                    <span class="question__letter question__letter--statistics bg-dark text-light border">D</span>
                                    {% if allAnswers[index].answer == 4 %}<i class="fa-regular fa-user answer__logo--right"></i>{% endif %}
                                    {{ question.answerFour }}
                                </li>
                            </ul>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
            <a href="{{ path('quiz-initial', { 'code': quiz.code }) }}" type="button" class="quiz__button btn btn-dark mt-2 btn-lg"><i class="fa-solid fa-rotate-right"></i> Quiz wiederholen</a>
            <a href="{{ path('home') }}" type="button" class="btn btn-secondary quiz__button mt-2 btn-lg">Zurück zur Startseite</a>
        </p>
    </div>
    <div class="box box--70 mx-auto shadow border rounded pt-2 position-relative">
        <h2>Quizstatistik</h2>
        <p class="text-primary position-absolute top-0 end-0 mt-2 me-3 fs-5"><i class="fa-solid fa-arrows-rotate fa-spin"></i> Live</p>
        <div id="container-stats">
            <ul class="list-group rounded mb-2">
                    <li class="list-group-item">
                        Fragenanzahl: <strong>{{ quiz.getQuestions|length }}</strong>
                    </li>
                
                    <li class="list-group-item">
                        Spieleranzahl: <strong>{{ leaderBoardEntries|length }}</strong>
                    </li>
                    <li class="list-group-item">
                        Punkteschnitt: <strong>{{ averageScore }}</strong>
                    </li>
                    <li class="list-group-item
                        {% if averageScorePercentage >= 70 %}
                            bg-success text-light
                        {% elseif averageScorePercentage >= 40 %}
                            bg-warning 
                        {% else %}
                            bg-danger text-light
                        {% endif %}
                    ">
                        Kursnote: <strong>{{ averageScorePercentage }}%</strong>
                    </li>
                </ul>
            <h2>Rangliste</h2>
            <table class="table table-striped table-dark mb-4t leaderboard" data-quiz="{{ quiz.id }}">
                <thead>
                    <tr>
                    <th scope="col"><i class="fa-solid fa-ranking-star"></i></th>
                    <th scope="col" class="text-start">Spielername</th>
                    <th scope="col" ><i class="fa-regular fa-circle-check"></i></th>
                    </tr>
                </thead>
                <tbody id="leaderboard-body">
                    {% set place = 1 %}
                    {% for entry in leaderBoardEntries %}
                        {% if loop.index == 1 %}
                            {% set entryScoreTmp = entry.score %}
                        {% endif %}
                        {% if entryScoreTmp != entry.score %}
                            {% set place = place + 1 %}
                            {% set entryScoreTmp = entry.score %}
                        {% endif %}
                        <tr>
                            <td {% if entry.matrikelnumber == matrikelnummer %}class="text-info fs-5"{% endif %}>{{ place }}</td>
                            <td class="text-start">
                                <div {% if entry.matrikelnumber == matrikelnummer %}class="d-inline-block fs-5"{% endif %}>
                                    {% if place == 1 %}
                                        <span style="color: #ffd700"><i class="fa-solid fa-crown"></i></span>
                                    {% endif %}
                                    {% if place == 2 %}
                                        <span style="color: #c0c0c0"><i class="fa-solid fa-crown"></i></span>
                                    {% endif %}
                                    {% if place == 3 %}
                                        <span style="color: #bf8970"><i class="fa-solid fa-crown"></i></span>
                                    {% endif %}
                                    <span {% if entry.matrikelnumber == matrikelnummer %}class="text-info"{% endif %}>
                                    {{ entry.matrikelnumber }}
                                    
                                    {% if entry.matrikelnumber == matrikelnummer %}
                                        <i class="fa-regular fa-user"></i>
                                    {% endif %}
                                    </span>
                                </div>
                            </td>
                            <td {% if entry.matrikelnumber == matrikelnummer %}class="text-info fs-5"{% endif %}>{{ entry.score }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% include ('footer.html.twig') %}