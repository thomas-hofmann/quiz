{% include ('base.html.twig') %}
<div class="container text-center">
    <ul class="list-group custom-list mx-auto">
        <li class="list-group-item">
            <h1 class="mb-0">{{ quiz.name }}</h1>
        </li>
        <li class="list-group-item">
            <i class="fa-regular fa-share-from-square"></i> {{ quiz.code }}
        </li>
        <li class="list-group-item">
            <i class="fa-regular fa-user"></i> {{ matrikelnummer }}
        </li>
        <li class="list-group-item">
            <span class="{% if rightIndex > 0 %}text-success{% else %}text-danger{% endif %}"><i class="fa-regular fa-circle-check "></i> {{ rightIndex }}</span>
        </li>
    </ul>
    <h1 class="mt-5">Quiz fertig</h1>
    <p class="{% if rightIndex > 0 %}text-success{% else %}text-danger{% endif %}">Sie haben {{ rightIndex }} Fragen richtig beantwortet!<p>
    <a href="{{ path('quiz', {code: quiz.code}) }}" type="button" class="btn btn-primary mt-2"><i class="fa-solid fa-rotate-right"></i> Quiz wiederholen</a>
    <a href="/" type="button" class="btn btn-primary mt-2"><i class="fa-solid fa-arrow-left-long"></i> Zur√ºck zur Startseite</a>
    <h2>Rangliste</h2>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Matrikelnummer</th>
              <th scope="col">Richtige Antworten</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in leaderBoardEntries %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{% if loop.index == 1 %}<i class="fa-solid fa-crown"></i>{% endif %} {{ entry.matrikelnumber }} {% if loop.index == 1 %}<i class="fa-solid fa-crown"></i>{% endif %}</td>
                    <td>{{ entry.score }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% include ('footer.html.twig') %}