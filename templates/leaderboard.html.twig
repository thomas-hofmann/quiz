{% include ('base.html.twig') %}
<div class="container">
    <div class="box border rounded shadow p-3 mx-auto">
        <h2>Rangliste</h2>
        <table class="table table-striped table-dark text-center">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Matrikelnummer</th>
                <th scope="col">Richtige Antworten</th>
                </tr>
            </thead>
            <tbody>
                {% set place = 1 %}
                {% for entry in leaderBoardEntries %}
                    {% if loop.index == 1 %}
                        {% set entryScoreTmp = entry.score %}
                    {% endif %}
                    {% if entryScoreTmp != entry.score %}
                        {% set place = place + 1 %}
                        {% set entryScoreTmp = entry.score %}
                    {% endif %}
                    <tr>
                        <td>{{ place }}</td>
                        <td>{% if place == 1 %}<span style="color: #ffd700"><i class="fa-solid fa-crown"></i>{% endif %} {{ entry.matrikelnumber }} {% if place == 1 %}<i class="fa-solid fa-crown"></i>{% endif %}</span></td>
                        <td>{{ entry.score }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="/dashboard" type="button" class="btn btn-primary mt-2">Zur√ºck zum Dashboard</a>
    </div>
</div>
