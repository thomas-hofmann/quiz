{% include ('base.html.twig') %}
<div class="container text-center">
    <div class="box border rounded shadow p-3 mx-auto">
        <img src="{{ asset('images/logo.png') }}" class="logo">
        <h1><strong>Quiz</strong></h1>
        <form action="{{ path('quiz-initial') }}" method="post" class="box mx-auto">
            <div class="form-group mt-4">
                <input type="text" class="form-control mb-4 text-center" name="code" placeholder="Beitrittscode"{% if parameter %} value="{{ parameter }}"{% endif %}
                 required>
                <input type="number" class="form-control mb-4 text-center" name="matrikelnummer" placeholder="Matrikelnummer" min="-9999999999" max="9999999999" required>
            </div>
            <button type="submit" class="btn btn-success btn-lg mt-2 mb-3 w-100"><i class="fa-regular fa-circle-play"></i> Quiz starten</button>
        </form>
    </div>
</div>
{% include ('footer.html.twig') %}