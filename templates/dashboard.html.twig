{% include ('base.html.twig') %}
<div class="container">
    <div class="box box--70 border rounded shadow p-3 mx-auto">
        <h1 class="mb-4">Dashboard</h1>
        <p>Profil: {{ user.getEmail() }}</p>
        <hr>
        <p><i class="fa-solid fa-circle-exclamation"></i> Bitte halten Sie Ihre Quizze sauber und löschen Sie diejenigen, die nicht mehr benötigt werden. Vielen Dank!</p>
        <p>
            <a class="btn btn-success d-block w-100" href="{{ path('create-quiz') }}"><i class="fa-solid fa-plus"></i> Neues Quiz erstellen</a>
        </p>
        <h2>Meine Quizze</h2>
        <ul class="list-group">
            {% for quiz in quizzes %}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-8">
                            <h3>{{ quiz.name|e }}</h3>
                            <p class="mb-0">
                                <b>Beitrittscode:</b><br>{{ quiz.code }}
                            </p>
                            <p class="mb-0">
                                <b>Sharelink:</b>
                                <br>{{ url('home', { 'quizcode': quiz.code }) }}
                            </p>
                            {% if quiz.getLeaderBoardEntries|length %}
                                <p>
                                    <b>Statistik:</b>
                                    <br>
                                    {{ quiz.getLeaderBoardEntries|length }} Einträge gefunden
                                </p>
                            {% endif %}
                            
                            {% if quiz.getQuestions is empty %}
                                <p class="text-danger"><b>Dieses Quiz hat noch keine Fragen</b></p>
                            {% endif %}
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <a class="btn btn-primary d-block mb-2" href="{{ path('edit_quiz', {'id': quiz.id}) }}"><i class="fa-regular fa-pen-to-square"></i> Bearbeiten</a>
                            {% if quiz.getLeaderBoardEntries|length %}
                                <a class="btn btn-primary d-block mb-2" href="{{ path('leaderboard', {'id': quiz.id}) }}"><i class="fa-solid fa-chart-simple"></i> Statistik anzeigen</a>
                                <a class="btn btn-primary d-block mb-2" href="{{ path('clear_leaderboard', {'id': quiz.id}) }}" onclick="return confirm('Sind Sie sicher, dass Sie diese Statistik zurücksetzen möchten?')"><i class="fa-solid fa-rotate-right"></i> Statistik zurücksetzen</a>
                            {% endif %}
                            <a class="btn btn-danger d-block" href="{{ path('delete_quiz', {'id': quiz.id}) }}" onclick="return confirm('Sind Sie sicher, dass Sie dieses Quiz löschen möchten?')"><i class="fa-regular fa-trash-can"></i> Löschen</a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% include ('footer.html.twig') %}