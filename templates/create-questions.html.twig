{% include ('base.html.twig') %}
<div class="container">
    <div class="box box--70 border rounded shadow p-3 mx-auto">
        {% if questions|length %}
            <h2>Quizfragen</h2>
            <ul class="list-group mb-2">
                {% for question in questions %}
                    <li class="list-group-item">
                        <p class="mb-2">
                            {{ loop.index }}. Frage: {{ question.text}}
                        </p>
                        <p>
                            <a href="{{ path('edit_question', { 'id': question.id }) }}" class="btn btn-sm btn-dark mt-2"><i class="fa-regular fa-pen-to-square"></i> Frage bearbeiten</a>
                            <a href="{{ path('delete_question', { 'id': question.id }) }}" class="btn btn-sm btn-danger mt-2" onclick="return confirm('Sind Sie sicher, dass Sie diese Frage löschen möchten?')"><i class="fa-regular fa-trash-can"></i> Frage löschen</a>
                        </p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        {% if questions|length %}
            <h3>Weitere Frage erstellen</h3>
        {% else %}
            <h3>Frage erstellen</h3>
        {% endif %}
        
        <form action="{{ path('create-questions') }}" method="get">
            <div class="form-group custom-list">
                <input type="hidden" name="quizId" value="{{ quiz.id }}">
                <label for="question">Frage</label>
                <input type="text" class="form-control" id="question" name="question" required>
                <label for="answer1" class="mt-2">Antwortmöglichkeit: 1</label>
                <input type="text" class="form-control" id="answer1" name="answer1" required>
                <label for="answer2" class="mt-2">Antwortmöglichkeit: 2</label>
                <input type="text" class="form-control" id="answer2" name="answer2" required>
                <label for="answer3" class="mt-2">Antwortmöglichkeit: 3</label>
                <input type="text" class="form-control" id="answer3" name="answer3" required>
                <label for="answer4" class="mt-2">Antwortmöglichkeit: 4</label>
                <input type="text" class="form-control" id="answer4" name="answer4" required>
                <label for="rightAnswer" class="mt-2">Richtige Antwort (Eine Nummer zwischen 1 - 4)</label>
                <input type="number" min="1" max="4" class="form-control" id="rightAnswer" name="rightAnswer" required>
            </div>
            <p class="mt-3">
                <button type="submit" class="btn btn-dark mt-2"><i class="fa-solid fa-plus"></i> Diese Frage hinzufügen</button>
                {% if questions|length %}
                    <a href="{{ path('dashboard')}}" class="btn btn-success mt-2"><i class="fa-regular fa-floppy-disk"></i> Quiz fertig</a>
                {% else %}
                    <p class="text-danger">Achtung: Das Quiz brauch mindestens eine Frage</p>
                {% endif %}
            </p>
        </form>
    </div>
</div>
{% include ('footer.html.twig') %}